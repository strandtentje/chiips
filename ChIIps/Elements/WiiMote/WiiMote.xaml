<UserControl x:Class="WiiMote"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="130" Height="320">
    <Grid>
    	<Border Width="90" Height="280" ClipToBounds="True">
            <Label Content="Wiimote"/>
        </Border>
        <Button Content="Connect" Height="21" HorizontalAlignment="Left" Margin="34,162,0,0" Name="cmdConnect" VerticalAlignment="Top" Width="64" />
        <Button Content="Disconnect" Height="21" HorizontalAlignment="Left" Margin="34,189,0,0" Name="cmdDisconnect" VerticalAlignment="Top" Width="64" />
        <Label Content="This is the board" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="lblBoard" VerticalAlignment="Top" Visibility="Collapsed" />
        <Button Content="Connect 2" Height="21" HorizontalAlignment="Left" Margin="34,135,0,0" Name="cmdC2" VerticalAlignment="Top" Width="64" />
    </Grid>
</UserControl>
